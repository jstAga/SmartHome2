<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/iv_circle_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_person"
        app:layout_constraintBottom_toBottomOf="@id/iv_circle_avatar"
        app:layout_constraintEnd_toEndOf="@id/iv_circle_avatar"
        app:layout_constraintStart_toStartOf="@id/iv_circle_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_circle_avatar"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:text="@string/welcome_string"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_circle_electric_bolt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_circle_electric_bolt"
        app:layout_constraintStart_toStartOf="@+id/tv_welcome"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_electric_bolt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_electric_bolt"
        app:layout_constraintBottom_toBottomOf="@id/iv_circle_electric_bolt"
        app:layout_constraintEnd_toEndOf="@id/iv_circle_electric_bolt"
        app:layout_constraintStart_toStartOf="@id/iv_circle_electric_bolt"
        app:layout_constraintTop_toTopOf="@id/iv_circle_electric_bolt"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_khw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:text="@string/khw"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/iv_circle_electric_bolt"
        app:layout_constraintTop_toTopOf="@id/iv_circle_electric_bolt" />

    <TextView
        android:id="@+id/tv_power_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/power"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/tv_khw"
        app:layout_constraintTop_toBottomOf="@id/tv_khw" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_room"
        app:spanCount="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_circle_electric_bolt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_home"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
</androidx.constraintlayout.widget.ConstraintLayout>